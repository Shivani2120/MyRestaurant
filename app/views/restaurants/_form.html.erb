
<%= form_for @restaurant, remote: true do |f| %>
<div class="border p-4">
    <div class="mb-3">
      <%= f.label :logo,class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :name, class: "form-label"%>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label"%>
      <%= f.text_field :description, class: "form-control"%>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :contact, class: "form-label" %>
      <%= f.text_field :contact, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :full_address, class: "form-label" %>
      <%= f.text_field :full_address, class: "form-control" %>
    </div>

      <div id="photos">
        <%= f.fields_for :restaurant_images do |img| %>
          <%= render 'restaurant_image_fields', f: img %>
        <% end %>
      </div>
    

    <div class="actions" >
      <%= f.submit "submit", class: "btn btn-primary"  %>
    </div>
</div>
<% end %>